<div>
  <section id="leaderboard">
      <nav class="ladder-nav">
          <div class="ladder-title">
            <div id = "countdown">
                <h1 id = "topTenHeader">TOP TEN LEADERBOARD</h1>
                <ion-icon name="bug" id = "bug"></ion-icon>
                <div class = "linebreak"></div>
                <div id = "remainingTime">Challenge Time Remaining</div>
                <div class = "linebreak"></div>
                <div id = "countDownClock"></div>
            </div> 
          </div>
          <!--<div class = "linebreak"></div>-->
          <div class="ladder-search">
              <input id="search-leaderboard" type="text"  class="live-search-box" placeholder="Search for a User by Username" />
          </div>
      </nav>
      <table id="rankings" class="leaderboard-results">
          <thead>
              <tr>
                  <th>Rank</th>
                  <th>Name</th>
                  <th>Step Count</th> 
              </tr>
          </thead>
          <tbody id = "tableBody">
              <!--Leader-details goes here -->
              {{#each leaders}}
                {{>leader-details}} <!-- set rank equal to the leaderCounter (current rank number) -->
              {{/each}}
          </tbody>
      </table>
  </section>
</div>