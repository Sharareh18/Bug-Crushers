      <h2 id="loginCardTitle" class="page-title">Login</h2>
      <form class="form login-form">
        <div class="form-group">
          <label class = "loginCardHeaders" for="email-login">Email:</label>
          <input class="form-input" type="text" id="email-login"/>
        </div>
        <div class="form-group">
          <label class = "loginCardHeaders" for="password-login">Password:</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">login</button>
        </div>
      </form>
    </div>
    <div id="signupCard" class="login-card">
      <h2 class="page-title">Signup</h2>
      <form class="form signup-form">
        <div class="form-group">
          <label class = "loginCardHeaders" for="email-signup">Email:</label>
          <input class="form-input" type="text2" id="email-signup" />
        </div>
        <div class="form-group">
          <label class = "loginCardHeaders" for="password-signup">Password:</label>
          <input class="form-input" type="password2" id="password-signup" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">signup</button>
        </div>
      </form>
    </div>
  </div>
</div>